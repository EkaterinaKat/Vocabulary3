<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <center>
        <VBox alignment="CENTER">
            <Label text="Learning is completed!" styleClass="font_size_25"/>
            <Pane prefHeight="20"/>
            <Label fx:id="statisticsLabel"/>
            <Pane prefHeight="20"/>
            <ScrollPane maxHeight="200" minHeight="200" maxWidth="600" minWidth="600">
                <Label fx:id="problematicEntriesLabel" alignment="CENTER" maxWidth="570" minWidth="570"
                       textAlignment="CENTER"/>
            </ScrollPane>
            <Pane prefHeight="20"/>
            <HBox alignment="CENTER">
                <Button text="Copy" fx:id="copyButton"/>
                <Pane prefWidth="15"/>
                <Button text="Ok" fx:id="okButton"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
