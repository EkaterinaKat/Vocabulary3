            <Pane prefHeight="20"/>
            <ScrollPane maxHeight="200" minHeight="200" maxWidth="600" minWidth="600">
                <Label fx:id="problematicEntriesLabel" alignment="CENTER" maxWidth="570" minWidth="570"
