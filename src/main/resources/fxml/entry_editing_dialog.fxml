<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@/css/general_style.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER">
            <Pane prefHeight="15"/>
            <TextField fx:id="wordTextField" minWidth="270" maxWidth="270"/>
            <Pane prefHeight="15"/>
            <TextField fx:id="translationTextField" minWidth="270" maxWidth="270"/>
            <Pane prefHeight="15"/>
            <TextField fx:id="pageTextField" minWidth="100" maxWidth="100"/>
            <Pane prefHeight="15"/>
            <Button text="Ok" fx:id="okButton"/>
            <Pane prefHeight="15"/>
        </VBox>
    </center>

</BorderPane>
