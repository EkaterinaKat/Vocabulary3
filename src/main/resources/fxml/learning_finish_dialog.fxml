    <stylesheets>
        <URL value="@/css/general_style.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER">
            <Label text="Learning is completed!" styleClass="font_size_25"/>
            <Pane prefHeight="20"/>
